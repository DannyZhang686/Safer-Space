{
  "name": "Quellie Hacks Extension",
  "description": "Flags and hides discriminatory content!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "js": [ "third-party/jquery-1.12.0.min.js", "content.js" ],
    "matches" : ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icons": {
      "16": "/images/logo16.png",
      "32": "/images/logo32.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "web_accessible_resurces": [
    {
      "resources": ["popup.js"],
      "hi": ["asdf"]
    }
  ],
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage"]
}